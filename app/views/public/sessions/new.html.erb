<div class="sign-in">

  <div class="sign-in__title mt-3">
    <span>ログインフォーム</span>
  </div>

<%= flash[:notice]%>

<div class="sign-in__from">
 <%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label :email,"メールアドレス" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %><br/>
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-success"%>
  </div>

  <div class="mt-3">
   <%=link_to "ゲストログイン", users_guest_sign_in_path,method: :post, class:"btn btn-sm btn-info mb-2" %></br>
   <%= render "public/shared/links" %>
  </div>

 <% end %>


</div>
</div>
