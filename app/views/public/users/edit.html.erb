<div class="container">

<div class="row mt-2">
  <h1 class="public__page-title">ユーザ情報編集</h1>
</div>


<%= form_with model: @user, url: user_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label :profile_image %><br />
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :name,"ニックネーム" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :genre_id,"好きな料理ジャンル" %><br />
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
  </div>

  <%=f.submit "更新", class: "btn btn-success mt-3"%>

<% end %>

