<div class="row col-md-10 mt-1">

<% if users.exists? %>
<table class="table table-sm">
  <thead class="thead-light">
  <tr>
   <th colspan="2">Name</th>
   <th>Dinner</th>
   <th>Favorite</th>
  </tr>
  </thead>
   <% users.each do |user| %>
 <tbody>
 <tr>
  <td><%= image_tag user.get_profile_image("50x50","50x50+0+0")%></td>
  <td>
  <%= link_to user_path(user.id) do%>
  <%= user.name %>
  <% end %>
  </td>
  <td><%= "#{user.dinners.count}"%></td>
  <td><%= user.favorite_genre_name(user)%></td>
 </tr>
 </tbody>
<% end %>
</table>

<div class="d-flex justify-content-center mt-2"><%= paginate users %></div>

<% else %>

<p>ユーザがいません。</p>

<% end %>
</div>
</div>
