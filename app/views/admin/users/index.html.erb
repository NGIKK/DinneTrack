<div class="container">

<div class="row mt-2">
<h1 class= "admin__page-title">ユーザ一覧</h1>
</div>

<div class="row col-md-10 mt-3">

<table class="table table-sm">
  <thead class="thead-light">
  <tr>
   <th colspan="2">ID</th>
   <th>メールアドレス</th>
   <th>ユーザ名</th>
   <th>投稿数</th>
   <th>お気に入り</th>
   <th>ステータス</th>
  </tr>
  </thead>
   <% @users.each do |user| %>
 <tbody>
 <tr>
  <td><%= user.id %></td>
  <td><%= image_tag user.get_profile_image("50x50","50x50+0+0")%></td>
  <td><%= user.email %></td>
  <td>
  <%= link_to admin_user_path(user.id) do%>
  <%= user.name %>
  <% end %>
  </td>
  <td><%= "#{user.dinners.count}"%></td>
  <td><%= user.favorite_genre_name(user)%></td>
  <td><% if user.is_deleted %>
       <span class="text-danger">停止措置中</span>
      <% else %>
      <span class="text-success">有効</span>
      <% end %>
  </td>
 </tr>
 </tbody>
<% end %>
</table>

<div class="d-flex justify-content-center mt-2"><%= paginate @users %></div>


</div>
</div>
